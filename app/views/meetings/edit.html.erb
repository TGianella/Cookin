<main class="container" data-turbo='false'>
  <h1 class="font-bold text-4xl">Modifier une session</h1>

  <div class="text-4xl"><%= @meeting.masterclass.title %></div>

  <div class="flex-column">
    <%= form_with model: @meeting do |form| %>

      <div>
        <%= form.label "DÃ©but" %>
        <%= form.datetime_local_field :start_date %>
        <% @meeting.errors.full_messages_for(:start_date).each do |message| %>
          <div class="text-red-400"><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.label "Code postal" %>
        <%= form.text_field :zip_code %>
        <% @meeting.errors.full_messages_for(:zip_code).each do |message| %>
          <div class="text-red-400"><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.label "Nombre de convives" %>
        <%= form.number_field :capacity, in: 1..10 %>
        <% @meeting.errors.full_messages_for(:capacity).each do |message| %>
          <div class="text-red-400"><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.submit "Modifier la session" %>
      </div>
    <% end %>
  </div>
</main>