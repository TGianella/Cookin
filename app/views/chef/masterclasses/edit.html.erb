<div>
  <h1 class="font-bold text-4xl">Créer une nouvelle masterclass</h1>
</div>

<div class="flex-column">
  <%= form_with model: @masterclass do |form| %>

    <div>
      <%= form.label "Titre" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label "Description" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label "Durée (en minutes)" %>
      <%= form.number_field :duration, in: 60..300, step: 5 %>
    </div>

    <div>
      <%= form.label "Prix par personne" %>
      <%= form.number_field :price %>
    </div>

    <div class="checkbox-recipe__wrapper">
      <%= form.label "Recettes" %>
      <%= form.collection_check_boxes :recipe_ids, @recipes, :id, :title, {}, { :multiple => true } do |recipe| %>  
        <%= recipe.label(class:"label-checkbox") { recipe.check_box + recipe.text } %>
      <% end %>        
    </div>

    <div>
      <%= form.submit "Modifier ma masterclass" %>
    </div>
  <% end %>
</div>