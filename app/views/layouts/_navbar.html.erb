              <%= button_to "Se déconnecter", destroy_user_session_path, method: :get, class:'disconnect-button' %>
            </div>
          <% end %> 
        <% else %>
            <div class="collapse__login">
              <a href="<%=new_user_registration_path%>">S'inscrire</a>
